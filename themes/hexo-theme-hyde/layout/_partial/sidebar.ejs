<div class="sidebar">
  <div class="container sidebar-sticky">
    <div class="sidebar-about">
      <h1>
        <a href="<%- config.root %>" class="logo">
            <div style="color: #569CD6;"><span>glass_panel</span></div>
            <div><span style="color: #d4d4d4;">.</span><span style="color: #DCDCAA;">blog</span><span style="color: #d4d4d4;">()</span></div>
        </a>
      </h1>
      <% if (config.description) { %>
        <%- markdown(config.description) %>
      <% } %>
    </div>

    <nav class="sidebar-nav">
      <% if (config.social_links) { %>
        <p class="sidebar-icons">
          <% for (var link in config.social_links) { %>
            <% if (link == 'mail') { %>
              <a class="sidebar-icon" target="_blank" href="<%- url_for(config.social_links[link]) %>">
                <i class="fas fa-envelope"></i>
              </a>
            <% } else { %>
              <a class="sidebar-icon" target="_blank" href="<%- url_for(config.social_links[link]) %>">
                <i class="fab fa-<%= link %>"></i>
              </a>
            <% } %>
          <% } %>
        </p>
      <% } %>
      <% for (var i in config.nav) { %>
        <% if (path.substr(0, config.nav[i].length) === config.nav[i]) { %>
          <a class="sidebar-nav-item active" href="<%- url_for(config.nav[i]) %>"><%= i %></a>
        <% } else { %>
          <a class="sidebar-nav-item" href="<%- url_for(config.nav[i]) %>"><%= i %></a>
        <% } %>
      <% } %>
    </nav>

    <p class="desktop-footer">&copy; <%= new Date().getFullYear() %> <%= config.author || config.title %></p>
  </div>
</div>
